{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "baseUrl": ".",
        "paths": {
            "@elizaos/core": ["../core/src"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
